<!DOCTYPE html>
<html lang='es'>
    <head>
        <%- include('../partials/head') %>
        <link  href='/stylesheets/style-login&register.css' rel='stylesheet'>
        <script src='/js/validation-login.js'></script>
    </head>
    <body>
        <%- include('../partials/header') %>
        <main>
            <div class='panel'>
                <section class='panel-heading'>
                    <h2 class='panel-title'>Cre√° tu cuenta</h2>
                    <!--<div class='buttons'>
                        <button class='gmail' name='gmail'><i class='fab fa-google-plus-g fa-2x'></i></button>
                        <button name='facebook'><i id='fb' class='fab fa-facebook-square fa-2x'></i></button>
                    </div>-->
                </section>
                <section class='panel-body'>
                    <% if (typeof errors != 'undefined') { %>
                        <p style = 'color:red'>Error en los datos ingresados</p>
                        <ul>
                            <% for (let i= 0; i < errors.length; i++) { %>
                                <li>
                                    <%=errors[i].msg%>
                                </li>
                            <% } %>
                        </ul>
                    <% } %>
                    <form class ='formulario login' action='/user/login' method='POST'>
                        <fieldset>
                            <p class='form-group'>
                                <input class='form-control overall' id='email' placeholder='tuemail@ejemplo.com' name='email' type='text'>
                                <div id="emailFeedback" class="feedback"></div>
                            </p>
                            <p class='form-group overall'>
                                <input class='form-control' id='password' placeholder='Password' name='password' type='password'>
                                <div id="passwordFeedback" class="feedback"></div>
                            </p>
                                <label>
                                    <input class='remember' name='remember' type='checkbox' value='Recordarme'> Recordarme
                                </label>
                            <p>
                                <input class='btn-submit'  type='submit' value='Login'>
                            </p>
                        </fieldset>
                    </form>
                </section>
            </div>
        </main>
        <%- include('../partials/footer') %>
    </body>
</html>