<!DOCTYPE html>
<html lang='es'>
    <head>
        <%- include('../partials/head') %>
        <link  href='/stylesheets/style-login&register.css' rel='stylesheet'>
        <script src='/js/validation-register.js'></script>
    </head>
    <body>
        <%- include('../partials/header') %>
        <main>
            <% if (typeof errors != 'undefined') { %>
                <p style = 'color:red'>Error en el registro</p>
                <ul>
                    <% for (let i= 0; i < errors.length; i++) { %>
                        <li class='errorLi' >
                            <%=errors[i].msg%>
                        </li>
                    <% } %>
                </ul>
            <% } %>
            <div class='panel'>
                <section class='panel-heading'>
                    <h2 class='panel-title'>Cre√° tu cuenta</h2>
                <!--<div class='buttons'>
                        <button class='gmail' name='gmail'><i class='fab fa-google-plus-g fa-2x'></i></button>
                        <button class='facebook'><i id='fb' class='fab fa-facebook-square fa-2x'></i></button>
                    </div>-->
                </section>
                <section class='panel-body'>
                    <form class='register' action='/user/register' method='POST' enctype='multipart/form-data'>
                        <fieldset>
                            <p class='form-group'>
                                <input class='form-control overall' type='text' id='name' name='name' placeholder='Valeria'>
                                <div id="nameFeedback" class="feedback"></div>
                            </p>
                            <p class='form-group'>
                                <input class='form-control overall' type='text' id='last_name' name='last_name' placeholder='Gomes'>
                                <div id="last_nameFeedback" class="feedback"></div>
                            </p>
                            <p class='form-group'>
                                <input class='form-control overall' type='email' id='email' name='email' placeholder='valeria.gomes@gmail.com'>
                                <div id="emailFeedback" class="feedback"></div>
                            </p>
                            <p class='form-group'>
                                <input class='form-control overall' type='password' id='password' name='password' placeholder='******' minlength='8'>
                                <div id="passwordFeedback" class="feedback"></div>
                            </p>
                            <p class='form-group'>
                                <label class='label overall' for='image'>Imagen: </label>
                                <input type='file' id='image' name='image'>
                                <div id="imageFeedback" class="image"></div>
                            </p>
                            <p>
                                <input class='btn-submit' type='submit' value='Registrarse'>
                            </p>
                        </fieldset>
                    </form>
                </section>
            </div>
        </main>
        <%- include('../partials/footer') %>
    </body>
</html>