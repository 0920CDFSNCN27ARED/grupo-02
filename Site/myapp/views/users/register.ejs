<!DOCTYPE html>
<html lang="es">
    <head>
        <%- include('../partials/head') %>
        <link  href="/stylesheets/style-login&register.css" rel="stylesheet">
    </head>
    <body>
        <%- include('../partials/header') %>
        <main>
            <% if (typeof errors != 'undefined') { %>
                <p style = "color:red">Error en el registro</p>
                <ul>
                    <% for (let i= 0; i < errors.length; i++) { %>
                        <li class='errorLi' >
                            <%=errors[i].msg%>
                        </li>
                    <% } %>
                </ul>
            <% } %>
            <div class="panel">
                <section class="panel-heading">
                    <h2 class="panel-title">Cre√° tu cuenta</h2>
                <!--<div class="buttons">
                        <button class="gmail" name="gmail"><i class="fab fa-google-plus-g fa-2x"></i></button>
                        <button class="facebook"><i id="fb" class="fab fa-facebook-square fa-2x"></i></button>
                    </div>-->
                </section>
                <section class="panel-body">
                    <form action="/user/register" method="POST" enctype="multipart/form-data">
                        <fieldset>
                            <p class="form-group">
                                <input class="form-control" type="text" id="name" name="name" placeholder="Valeria">
                            </p>
                            <p class="form-group">
                                <input class="form-control" type="text" id="last_name" name="last_name" placeholder="Gomes">
                            </p>
                            <p class="form-group">
                                <input class="form-control" type="email" id="email" name="email" placeholder="valeria.gomes@gmail.com">
                            </p>
                            <p class="form-group">
                                <input class="form-control" type="password" id="password" name="password" placeholder="******" minlength="8">
                            </p>
                            <p class="form-group">
                                <label class="label" for="image">Imagen: </label>
                                <input type="file" id="image" name="image">
                            </p>
                            <p>
                                <input class="btn-submit" type="submit" value="Registrarse">
                            </p>
                        </fieldset>
                    </form>
                </section>
            </div>
        </main>
        <%- include('../partials/footer') %>
    </body>
</html>